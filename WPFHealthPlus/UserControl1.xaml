<UserControl x:Class="WPFHealthPlus.UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFHealthPlus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="3" Height="50" BorderBrush="#FFAF29AF" Background="White" CornerRadius="20" Margin="5" VerticalAlignment="Center">
            <StackPanel>
                <StackPanel x:Name="ucFood" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="foodId" Width="40" Height="40" Margin="10 0 0 0" />
                    
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
